#!/bin/bash

if [ "$1" == "start" ]; then
    pt-start
    exit 0
fi

if [ "$1" == "stop" ]; then
    pt-stop
    exit 0
fi

if [ "$1" == "status" ]; then
    pt-status
    exit 0
fi

##
# Color  Variables
##
green='\e[32m'
clear='\e[0m'

##
# Color Functions
##

ColorGreen(){
        echo -ne $green$1$clear
}


echo "Usage:"
echo ""
echo "To start the PORTAINER docker container:"
echo "$(ColorGreen 'pt start')"
echo ""
echo "To stop the PORTAINER docker container:"
echo "$(ColorGreen 'pt stop')"
echo ""
echo "To check the status of the PORTAINER docker container:"
echo "$(ColorGreen 'pt status')"
echo ""
