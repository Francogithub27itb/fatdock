#!/bin/bash

if [ "$1" == "cat" ] || [ "$1" == "-cat" ]; then
        cat=true
fi

##
# Color  Variables
##
blue='\e[34m'
clear='\e[0m'

##
# Color Functions
##

ColorBlue(){
        echo -ne $blue$1$clear
}

if [ "$cat" == "true" ]; then
        echo "La imatge docker d'Idea configurada es:"
else
        echo "The docker image for Idea is currently set to:"
fi
image=$(cat  "$HOME/.docker/idea/.env" | grep IDEA_IMG | cut -d "=" -f 2)
echo $(ColorBlue "$image")
echo ""

