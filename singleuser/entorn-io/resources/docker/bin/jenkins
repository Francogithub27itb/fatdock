#!/bin/bash

if [ "$1" == "start" ]; then
    jenkins-start
    exit 0
fi

if [ "$1" == "stop" ]; then
    jenkins-stop
    exit 0
fi

if [ "$1" == "status" ]; then
    jenkins-status
    exit 0
fi

##
# Color  Variables
##
green='\e[32m'
clear='\e[0m'

##
# Color Functions
##

ColorGreen(){
        echo -ne $green$1$clear
}


echo "Usage:"
echo ""
echo "To start the JENKINS docker container:"
echo "$(ColorGreen 'jenkins start')"
echo ""
echo "To stop the JENKINS docker container:"
echo "$(ColorGreen 'jenkins stop')"
echo ""
echo "To check the status of the JENKINS docker container:"
echo "$(ColorGreen 'jenkins status')"
echo ""

